{
    "build": {"dockerfile": "Dockerfile"},
    "remoteUser": "SRC_USER",
    "containerUser": "SRC_USER",
    "runArgs": ["--network", "host", "--gpus", "all"],
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached,readonly",
        "source=SRC_DIR,target=SRC_DIR,type=bind,consistency=cached"
    ],
    "postCreateCommand": "echo .devcontainer/ >> ~/.gitignore",
    "privileged": true
}